<configuration>
    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <file>proxy-logs/application.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="file" />
    </root>
</configuration>
